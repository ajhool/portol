{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["../src/portol/"]
    },
    "plugins": [],
    "templates": {	
		"cleverLinks"           : false,
		"monospaceLinks"        : true,
		"dateFormat"            : "ddd MMM Do YYYY",
		"outputSourceFiles"     : true,
		"outputSourcePath"      : true,
		"systemName"            : "Portol JS",
		"copyright"             : "<h3>Portol.js <a href=\"http://gruntjs.com/\"><img src=\"https://cdn.gruntjs.com/builtwith.png\" alt=\"Built with Grunt\"></a></h3>",
		"footer"                : "",
		"navType"               : "horizontal",
		"theme"                 : "spacelab",
		"linenums"              : true,
		"collapseSymbols"       : false,
		"inverseNav"            : true,
		"highlightTutorialCode" : true
    },
    "opts": {
        "template": "./node_modules/grunt-jsdoc/node_modules/ink-docstrap/template",
        "encoding": "utf8",
        "recurse": true,
        "query": "value",
        "private": false,
        "lenient": true
    }
}
